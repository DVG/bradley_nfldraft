<h1>Results By Team</h1>

<% @ownerships_by_team.each_key do |team| %>
<%= content_tag :div, :id => "team_#{team.id}" do%>
  <%= content_tag :h2 do %>
    <%= "#{team.name}" %>
  <% end %>
  <table class="table table-striped">
    <tr>
      <th>
        Player
      </th>
      <th>
        Drafted In
      </th>
    </tr>
    <% @ownerships_by_team[team].each do |ownership| %>
      <%= content_tag_for(:tr, ownership) do %>
        <td><%= ownership.player.name %></td>
        <td><%= ownership.order.round %></td>
      <% end %>
    <% end %>
  </table>
  <% end %>
<% end %>